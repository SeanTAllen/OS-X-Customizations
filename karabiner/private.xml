<?xml version="1.0"?>
<root>
  <item>
      <name>Remap Option to Hyper</name>
      <appendix>OS X doesn't have a Hyper. This maps Option to Control + Shift + Option + Command.</appendix>

      <identifier>space_cadet.option_to_hyper</identifier>

      <autogen>
          --KeyToKey--
          KeyCode::F19,

          KeyCode::COMMAND_L,
          ModifierFlag::OPTION_L | ModifierFlag::SHIFT_L | ModifierFlag::CONTROL_L
      </autogen>
  </item>
</root>
